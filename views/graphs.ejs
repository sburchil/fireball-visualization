<%- include('partials/header.ejs') %>
    <script src="https://cdn.plot.ly/plotly-2.14.0.min.js"></script>
    <link rel="stylesheet" href="/css/menu-icon.css">
    </head>
    <%- include('partials/svg.ejs') %>

        <div id="graph-alerts">

        </div>
        <div class="card" id="canvas-form">
            <div class="d-flex justify-content-end" style="text-decoration: none;" type="button" id="menu-toggle">
              <label class="menu-text" id="menu-text" style="font-size: 15pt;">Menu</label>
              <div id="toggle-icon">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
              </div>
            </div>
          </div>
          <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasMenu">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menu</h5>
            </div>
            <div class="offcanvas-body">
              <form action="" method="GET" id="paramForm">
                <div class="form-group">
                  <label for="date-min">Start Date</label>
                  <input type="date" class="form-control" id="date-min" name="date-min" min="1988-04-15"
                    max="2022-09-15" value="2000-01-01" />
                  <label for="date-max">End Date</label>
                  <input type="date" class="form-control" id="date-max" name="date-max" min="1988-04-15"
                    max="2022-09-15" value="2001-02-02" /><small id="date-help"></small>
                </div>
                <hr/>
                <div style="float: right; padding-bottom: 1rem;">
                  <button type="submit" class="btn btn-primary" id="submit">
                    Submit
                  </button>
                </div>
              </form>
            </div>
          </div>
            <div class="m-3">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill"
                            data-bs-target="#scatter-graph" type="button" role="tab" aria-controls="pills-home"
                            aria-selected="true">Scatter Plot</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
                            data-bs-target="#bar-graph" type="button" role="tab" aria-controls="pills-profile"
                            aria-selected="false">Bar Graph</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill"
                            data-bs-target="#line-graph" type="button" role="tab" aria-controls="pills-contact"
                            aria-selected="false">Line Graph</button>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="scatter-graph" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div id="scatter-div">
                        </div>
                    </div>
                    <div class="tab-pane fade" id="bar-graph" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <div id="graph2">
                        </div>
                    </div>
                    <div class="tab-pane fade" id="line-graph" role="tabpanel" aria-labelledby="pills-contact-tab">
                        <div id="graph3">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/graph.js"></script>
        <script src="/js/utility.js"></script>
        <%- include('partials/footer.ejs') %>